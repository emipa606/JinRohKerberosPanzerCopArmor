<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="JinRohArmor.PatchOperationModVersion">
    <mods>
		<li>Combat Extended</li>
    </mods>
	<modSettingverNum>
		<li>1</li>
	</modSettingverNum>
 		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
			<!-- =============================== HELMET =============================================================================-->
	        <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JRA_Police_Helmet"]/equippedStatOffsets</xpath>
			<value>
				<ShootingAccuracyPawn>0.10</ShootingAccuracyPawn>
			</value>
			</li>

			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="JRA_Police_Helmet"]/statBases/MaxHitPoints</xpath>
			<value>
				<MaxHitPoints>200</MaxHitPoints>
			</value>
			</li>

			<!-- =============================== ARMOR =============================================================================-->
	        <li Class="PatchOperationAdd"> 
            <xpath>Defs/ThingDef[defName="JRA_Police_Armor"]/equippedStatOffsets</xpath>
			<value>
				<CarryWeight>40</CarryWeight>
				<CarryBulk>10</CarryBulk>
			</value>
			</li>
			
			<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="JRA_Police_Armor"]/statBases/MaxHitPoints</xpath>
			<value>
				<MaxHitPoints>450</MaxHitPoints>
			</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="JRA_Police_Armor"]/apparel/bodyPartGroups</xpath>
				<value>
					<li>Hands</li>
					<li>Feet</li>
				</value>
			</li>

			</operations>
		</match>
</Operation>

</Patch>