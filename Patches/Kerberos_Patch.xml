<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <!-- Kerberos Panzer Cop Helmet -->
      <li Class="PatchOperationTest">
        <xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]</xpath>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]/costList</xpath>
        <value>
          <costList>
            <ComponentIndustrial>4</ComponentIndustrial>
          </costList>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]</xpath>
        <value>
          <stuffCategories>
            <li>Metallic</li>
          </stuffCategories>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]</xpath>
        <value>
          <costStuffCount>40</costStuffCount>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]/statBases/ArmorRating_Sharp</xpath>
        <value>
          <StuffEffectMultiplierArmor>0.6</StuffEffectMultiplierArmor>
        </value>
      </li>
      <li Class="PatchOperationRemove">
        <xpath>/Defs/ThingDef[defName = "JRA_Police_Helmet"]/statBases/ArmorRating_Blunt</xpath>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <!-- Kerberos Panzer Cop Armor -->
      <li Class="PatchOperationTest">
        <xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]</xpath>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]/costList</xpath>
        <value>
          <costList>
            <ComponentIndustrial>8</ComponentIndustrial>
          </costList>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]</xpath>
        <value>
          <stuffCategories>
            <li>Metallic</li>
          </stuffCategories>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]</xpath>
        <value>
          <costStuffCount>120</costStuffCount>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]/statBases/ArmorRating_Sharp</xpath>
        <value>
          <StuffEffectMultiplierArmor>0.6</StuffEffectMultiplierArmor>
        </value>
      </li>
      <li Class="PatchOperationRemove">
        <xpath>/Defs/ThingDef[defName = "JRA_Police_Armor"]/statBases/ArmorRating_Blunt</xpath>
      </li>
    </operations>
  </Operation>
</Patch>