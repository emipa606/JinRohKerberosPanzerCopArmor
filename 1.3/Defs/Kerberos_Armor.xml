<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Kerberos Panzer Cop Helmet -->
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>JRA_Police_Helmet</defName>
    <label>Special Police Helmet</label>
    <description>While this helmet provides excellent full head protection, its unspoken use is for intimidation. Cold to the touch.</description>
    <techLevel>Industrial</techLevel>
    <tradeability>Sellable</tradeability>
    <generateCommonality>0</generateCommonality>
    <generateAllowChance>0</generateAllowChance>
    <graphicData>
      <texPath>Things/Apparel/Head/PoliceHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>13000</WorkToMake>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>2.4</Mass>
      <Flammability>0.1</Flammability>
      <ArmorRating_Sharp>0.73</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.33</ArmorRating_Blunt>
      <ArmorRating_Heat>0.75</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>3.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ToxicSensitivity>-0.25</ToxicSensitivity>
      <SocialImpact>0.20</SocialImpact>
    </equippedStatOffsets>
    <costList>
      <Steel>40</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>Fabrication</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Head/PoliceHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryAdvanced</li>
        <li>EVA</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <thingCategories Inherit="False">
      <li>Headgear</li>
    </thingCategories>
  </ThingDef>
